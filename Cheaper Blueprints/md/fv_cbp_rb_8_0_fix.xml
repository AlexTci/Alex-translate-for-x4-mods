<?xml version="1.0" encoding="UTF-8"?>
<mdscript name="FV_CheaperBlueprints_8_0Fix">
  <cues>
    <cue name="Load_Lua_Files_Loader" instantiate="true">
      <conditions>
        <event_ui_triggered screen="'Lua_Loader'" control="'Ready'" />
      </conditions>
      <actions>
        <raise_lua_event name="'Lua_Loader.Load'" param="'extensions.Cheaper Blueprints.lua.ui_addons.menu_trader_blueprintsorlicences'" />
      </actions>
    </cue>
    <cue name="Load_Lua_Files_GameStart" instantiate="true">
      <conditions>
        <check_any>
          <event_cue_signalled cue="md.Setup.GameStart" />
          <event_game_loaded />
        </check_any>
      </conditions>
      <actions>
        <signal_cue_instantly cue="DelayedLoad" param="table[$path='extensions.Cheaper Blueprints.lua.ui_addons.menu_trader_blueprintsorlicences']"/>
      </actions>
    </cue>
    <cue name="DelayedLoad" instantiate="true">
      <conditions>
        <event_cue_signalled />
      </conditions>
      <actions>
        <wait exact="1s"/>
        <raise_lua_event name="'Lua_Loader.Load'" param="event.param.$path" />
      </actions>
    </cue>
  </cues>
</mdscript>
